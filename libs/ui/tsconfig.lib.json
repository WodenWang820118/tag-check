{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "composite": true,
    "useDefineForClassFields": false,
    "types": []
  },
  "references": [{ "path": "../data-access/tsconfig.lib.json" }],
  "exclude": [
    "src/**/*.spec.ts",
    "src/test-setup.ts",
    "jest.config.mjs",
    "src/**/*.test.ts",
    "jest.config.ts"
  ],
  "include": ["src/**/*.ts"]
}
